<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOD3_ACT1.View.PageView">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Label Text="Student ID"/>
            <Entry Text="{Binding StudentIdEntry}"/>

            <Label Text="Name"/>
            <Entry Text="{Binding StudentNameEntry}"/>

            <Label Text="Course Code"/>
            <Entry Text="{Binding StudentCodeEntry}"/>

            <Label Text="Course Title"/>
            <Entry Text="{Binding StudentTitleEntry}"/>

            <Label Text="No. Of Units"/>
            <Entry Text="{Binding StudentUnitsEntry}"/>

            <Label Text="Date Of Attendance"/>
            <Entry Text="{Binding StudentDateEntry}"/>

            <Button Command="{Binding SubmitEntry}" Text="Submit"/>

            <Label Text="{Binding StudentIdDisplay}"/>
            <Label Text="{Binding StudentNameDisplay}"/>
            <Label Text="{Binding StudentCodeDisplay}"/>
            <Label Text="{Binding StudentTitleDisplay}"/>
            <Label Text="{Binding StudentUnitsDisplay}"/>
            <Label Text="{Binding StudentDateDisplay}"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>